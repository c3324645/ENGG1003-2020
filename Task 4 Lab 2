#include <stdio.h>

//Task 4 Lab 2 --> Part of flow control exercises implementing pseudocode and if statements

int main()
{
    int a, b, q, r;
    
    printf("Enter 2 integers: ");
    scanf("%d %d", &a, &b);
    
    if(b==0){
        printf("Division by zero error");
    }
        else {
        q=a/b;
        r=a%b;
        printf("a divided by b is %d\n", q);
        printf("and the remainder is %d\n", r);
        }
    
    
return 0;
}
